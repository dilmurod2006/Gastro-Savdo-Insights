# .env.example - Quyidagi o'zgaruvchilarni o'zgartirib .env fayliga saqlang

# ==================== Database Configuration ====================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=northwind
DB_POOL_SIZE=5

# ==================== JWT Configuration ====================
JWT_SECRET_KEY=your-super-secret-key-change-in-production-at-least-32-chars
JWT_EXPIRE_SECONDS=3600
JWT_REFRESH_EXPIRE_SECONDS=604800

# ==================== Telegram Bot (2FA) ====================
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather

# ==================== Security ====================
OTP_EXPIRE_SECONDS=300
COOKIE_SECURE=False

# ==================== Application ====================
DEBUG=False
ENVIRONMENT=development